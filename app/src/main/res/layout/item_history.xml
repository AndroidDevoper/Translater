<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/item_history_tv_languageFrom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.045"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.022" />

    <TextView
        android:id="@+id/item_history_tv_language_pointer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/item_history_tv_margin"
        android:text="@string/item_history_pointer"
        app:layout_constraintBottom_toBottomOf="@+id/item_history_tv_languageFrom"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/item_history_tv_languageFrom"
        app:layout_constraintTop_toTopOf="@+id/item_history_tv_languageFrom"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/item_history_tv_languageTo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/item_history_tv_margin"
        app:layout_constraintBottom_toBottomOf="@+id/item_history_tv_language_pointer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/item_history_tv_language_pointer"
        app:layout_constraintTop_toTopOf="@+id/item_history_tv_language_pointer"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/item_history_tv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/item_history_tv_languageTo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.937"
        app:layout_constraintStart_toEndOf="@+id/item_history_tv_languageTo"
        app:layout_constraintTop_toTopOf="@+id/item_history_tv_languageTo"
        app:layout_constraintVertical_bias="0.0" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/item_history_tv_margin"
        android:layout_marginRight="@dimen/item_history_tv_margin"
        android:layout_marginTop="@dimen/item_history_tv_margin"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/item_history_tv_languageFrom"
        app:layout_constraintVertical_bias="0.014">

        <TextView
            android:id="@+id/item_history_tv_value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/item_history_tv_margin"
            android:textColor="@color/black"
            android:layout_weight="0.65"
            android:gravity="center"/>

        <TextView
            android:id="@+id/item_history_tv_value_pointer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/item_history_tv_margin"
            android:text="@string/item_history_pointer"
            android:textColor="@color/black"
            android:layout_weight="0.90"/>

        <TextView
            android:id="@+id/item_history_tv_result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/item_history_tv_margin"
            android:textColor="@color/black"
            android:layout_weight="0.4"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>